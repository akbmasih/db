{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AIServiceFullAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": ["arn:aws:iam::*:user/ai_service"]
      },
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:ListBucketMultipartUploads"
      ],
      "Resource": ["arn:aws:s3:::lingudesk-ai-cache"]
    },
    {
      "Sid": "AIServiceObjectAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": ["arn:aws:iam::*:user/ai_service"]
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:AbortMultipartUpload",
        "s3:ListMultipartUploadParts"
      ],
      "Resource": ["arn:aws:s3:::lingudesk-ai-cache/*"]
    },
    {
      "Sid": "BackendServiceReadAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": ["arn:aws:iam::*:user/backend_service"]
      },
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::lingudesk-ai-cache",
        "arn:aws:s3:::lingudesk-ai-cache/*"
      ]
    },
    {
      "Sid": "DenyUnencryptedTransport",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::lingudesk-ai-cache",
        "arn:aws:s3:::lingudesk-ai-cache/*"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    },
    {
      "Sid": "DenyExternalAccess",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::lingudesk-ai-cache",
        "arn:aws:s3:::lingudesk-ai-cache/*"
      ],
      "Condition": {
        "NotIpAddress": {
          "aws:SourceIp": [
            "10.0.0.0/24",
            "127.0.0.1/32"
          ]
        }
      }
    }
  ]
}